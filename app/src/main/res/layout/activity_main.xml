<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.schibsted.tapdadev.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/gap_medium"
        android:text="Time"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/gap_medium"
        android:text="Points"/>

    <include
        android:id="@+id/l_developer1"
        layout="@layout/item_dev"
        android:layout_width="@dimen/item_width_back"
        android:layout_height="@dimen/item_height_back"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/padding_bottom_back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <include
        android:id="@+id/l_developer2"
        layout="@layout/item_dev"
        android:layout_width="@dimen/item_width_back"
        android:layout_height="@dimen/item_height_back"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/padding_bottom_back"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <include
        android:id="@+id/l_developer0"
        layout="@layout/item_dev_front"
        android:layout_width="@dimen/item_width_front"
        android:layout_height="@dimen/item_height_front"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
